<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button1"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_amb"
            android:text="ВЫЗВАТЬ СКОРУЮ ПОМОЩЬ"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:onClick="button1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_1aid"
            android:text="КАК ОКАЗАТЬ ПЕРВУЮ ПОМОЩЬ?"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_covid"
            android:text="COVID-19"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_mas"
            android:text="ГДЕ КУПИТЬ МАСКИ?"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_sim"
            android:text="ПРОВЕРЬТЕ СВОИ ЗНАНИЯ"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_pills"
            android:text="КОНТРОЛИРУЙТЕ ПРИЕМ ЛЕКАРСТВ"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button7"
            android:layout_width="358dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_dust"
            android:text="УЗНАТЬ УРОВЕНЬ ПЫЛИ В ВОЗДУХЕ"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>