<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AidActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="Человек без сознания, не дышит" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="Человек без сознания, но дышит" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="шоковое состояние" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="приступ астмы" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="инсульт" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="кровотечение" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="ожоги" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="перелом костей" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="аллергия/анафилактическая реакция" />

        <Button
            android:id="@+id/btn10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="сердечный приступ" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="гипотермия" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0.5dp"
            android:background="@color/white"
            android:text="отравление" />

    </LinearLayout>
</ScrollView>